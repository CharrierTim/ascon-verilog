{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run VSG on current file",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/vsg",
            "args": [
                "--config",
                "tools/format/vhdl_vsg_config.yaml",
                "--fix",
                "${file}"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Run VSG on ALL *.vhd files",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/vsg",
            "args": [
                "--config",
                "tools/format/vhdl_vsg_config.yaml",
                "--fix",
                "-f",
                "${workspaceFolder}/src/rtl/vhdl/**/*.vhd",
                "${workspaceFolder}/src/bench/vunit/**/*.vhd"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}